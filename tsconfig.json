{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src/",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "build/declarations",
    "module": "es2022",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "target": "es2022",
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2022",
      "dom"
    ],
    "plugins": [],
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "exclude": [
    "build",
    "node_modules"
  ],
}
